<?xml version="1.0" encoding="UTF-8"?>

<form>	
	<fieldset>
		<field
			name="link"
			type="url"
			label="COM_THM_REPO_LINK_LINK"
			description="COM_THM_REPO_LINK_LINK_DESC"
			default="http://"
			required="true"
			size="40"
		/>
		<field
			name="created_by"
			type="createdby"
			label="COM_THM_REPO_LINK_CREATED_BY"
			description="COM_THM_REPO_LINK_CREATED_BY_DESC"
		/>
		<field
			name="modified_by"
			type="modifiedby"
			label="COM_THM_REPO_LINK_MODIFIED_BY"
			description="COM_THM_REPO_LINK_MODIFIED_BY_DESC"
		/>
		<field
			name="modified"
			type="modified"
			label="COM_THM_REPO_LINK_MODIFIED"
			description="COM_THM_REPO_LINK_MODIFIED_DESC" 
		/>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="link_id"
			type="hidden"
		/>
		<field
			name="created"
			type="calendar"
			label="COM_THM_REPO_LINK_CREATED"
			description="COM_THM_REPO_LINK_CREATED_DESC" 
			default="now"
			readonly="true" 
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
		/>
		<field
			name="parent_id"		
			type="allfolder"	
			default="1"	
			size="10"
			label="COM_THM_REPO_LINK_PARENT_ID"
			description="COM_THM_REPO_LINK_PARENT_ID_DESC"
		/>
		<field
			name="name"
			type="text"
			label="COM_THM_REPO_LINK_NAME"
			description="COM_THM_REPO_LINK_NAME_DESC"
			required="true"
			size="40"
		/>
		<field
			name="description"
			type="textarea"
			rows="6"
			cols="40"
            required="true"
			label="COM_THM_REPO_LINK_DESCRIPTION"
			description="COM_THM_REPO_LINK_DESCRIPTION_DESC"
		/>
		<field
			name="viewlevel"
			type="viewlevel"
			label="COM_THM_REPO_LINK_VIEWLEVEL"
			description="COM_THM_REPO_LINK_VIEWLEVEL_DESC"
		/>
		<field 
			name="published" 
			type="checkbox" 
			value="1"
			default="1"
			label="COM_THM_REPO_LINK_PUBLISHED" 
			description="COM_THM_REPO_LINK_PUBLISHED_DESC" 
		/>	
	</fieldset>
		<fieldset name="accesscontrol">
		<field 
			name="asset_id" 
			type="hidden" 
			filter="unset" 
		/>
		<field
			name="rules"
			type="rules"
			label="JFIELD_RULES_LABEL"
			validate="rules"
			class="inputbox"
			component="com_thm_repo"
			section="entity" 
		/>
	</fieldset>		
</form>