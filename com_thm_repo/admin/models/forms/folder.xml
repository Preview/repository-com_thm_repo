<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset>
		<field
			name="created_by"
			type="createdby"
			label="COM_THM_REPO_FOLDER_CREATED_BY"
			description="COM_THM_REPO_FOLDER_CREATED_BY_DESC"
		/>
		<field
			name="modified_by"
			type="modifiedby"
			label="COM_THM_REPO_FOLDER_MODIFIED_BY"
			description="COM_THM_REPO_FOLDER_MODIFIED_BY_DESC"
		/>
		<field
			name="modified"
			type="modified"
			label="COM_THM_REPO_FOLDER_MODIFIED"
			description="COM_THM_REPO_FOLDER_MODIFIED_DESC" 
		/>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="created"
			type="calendar"
			label="COM_THM_REPO_FOLDER_CREATED"
			description="COM_THM_REPO_FOLDER_CREATED_DESC" 
			default="now"
			readonly="true" 
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
		/>
		<field
			name="parent_id"		
			type="folder"
			default="1"
			size="10"
			label="COM_THM_REPO_FOLDER_PARENT_ID"
			description="COM_THM_REPO_FOLDER_PARENT_ID_DESC"
		/>
		<field
			name="name"
			type="text"
			label="COM_THM_REPO_FOLDER_NAME"
			description="COM_THM_REPO_FOLDER_NAME_DESC"
			required="true"
			size="40"
		/>
		<field
			name="description"
			type="textarea"
			rows="6"
			cols="40"
			label="COM_THM_REPO_FOLDER_DESCRIPTION"
			description="COM_THM_REPO_FOLDER_DESCRIPTION_DESC"
		/>
		<field
			name="viewlevel"
			type="viewlevel"
			label="COM_THM_REPO_FOLDER_VIEWLEVEL"
			description="COM_THM_REPO_FOLDER_VIEWLEVEL_DESC"
		/>
	</fieldset>
	<fieldset name="accesscontrol">
		<field 
			name="asset_id" 
			type="hidden" 
			filter="unset" 
		/>
		<field
			name="rules"
			type="rules"
			label="JFIELD_RULES_LABEL"
			validate="rules"
			class="inputbox"
			component="com_thm_repo"
			section="folder" 
		/>
		<field 
			name="published" 
			type="checkbox" 
			value="1"
			default="1"
			label="COM_THM_REPO_FOLDER_PUBLISHED" 
			description="COM_THM_REPO_FOLDER_PUBLISHED_DESC" 
		/>
	</fieldset>
</form>