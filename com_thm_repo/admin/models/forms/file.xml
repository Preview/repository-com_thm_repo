<?xml version="1.0" encoding="UTF-8"?>

<form>	
	<fieldset>
		<field
			name="create_by"
			type="createby"
			label="COM_THM_REPO_FILE_CREATE_BY"
			description="COM_THM_REPO_FILE_CREATE_BY_DESC"
		/>
		<field
			name="modified_by"
			type="modifiedby"
			label="COM_THM_REPO_FILE_MODIFIED_BY"
			description="COM_THM_REPO_FILE_MODIFIED_BY_DESC"
		/>
		<field
			name="modified"
			type="modified"
			label="COM_THM_REPO_FILE_MODIFIED"
			description="COM_THM_REPO_FILE_MODIFIED_DESC" 
		/>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="created"
			type="calendar"
			label="COM_THM_REPO_FILE_CREATED"
			description="COM_THM_REPO_FILE_CREATED_DESC" 
			default="now"
			readonly="true" 
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
		/>
		<field
			name="parent_id"		
			type="filefolder"		
			label="COM_THM_REPO_FILE_PARENT_ID"
			description="COM_THM_REPO_FILE_PARENT_ID_DESC"
		/>
		<field
			name="name"
			type="text"
			label="COM_THM_REPO_FILE_NAME"
			description="COM_THM_REPO_FILE_NAME_DESC"
		/>
		<field
			name="description"
			type="textarea"
			rows="6"
			cols="40"
			label="COM_THM_REPO_FILE_DESCRIPTION"
			description="COM_THM_REPO_FILE_DESCRIPTION_DESC"
		/>
		<field
			name="viewlevels"
			type="viewlevels"
			label="COM_THM_REPO_FILE_VIEWLEVELS"
			description="COM_THM_REPO_FILE_VIEWLEVELS_DESC"
		/>
		<field 
			name="file" 
			type="file" 
			label="COM_THM_REPO_FILE_UPLOAD" 
			description="COM_THM_REPO_FILE_UPLOAD_DESC" 
		/>
		
	</fieldset>
